{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[parameters('location')]",
      "metadata": { "description": "Deployment location." }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "[parameters('adminUsername')]",
      "metadata": { "description": "Admin username for VMs." }
    },
    "windowsAdminPassword": {
      "type": "secureString",
      "metadata": { "description": "Password for Windows VM admin." }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "[parameters('virtualNetworkName')]"
    },
    "frontendSubnetName": {
      "type": "string",
      "defaultValue": "[parameters('frontendSubnetName')]"
    },
    "backendSubnetName": {
      "type": "string",
      "defaultValue": "[parameters('backendSubnetName')]"
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "[parameters('vnetAddressPrefix')]"
    },
    "frontendSubnetPrefix": {
      "type": "string",
      "defaultValue": "[parameters('frontendSubnetPrefix')]"
    },
    "backendSubnetPrefix": {
      "type": "string",
      "defaultValue": "[parameters('backendSubnetPrefix')]"
    },
    "frontendVmSize": {
      "type": "string",
      "defaultValue": "[parameters('frontendVmSize')]"
    },
    "postgresServerName": {
      "type": "string",
      "defaultValue": "[parameters('postgresServerName')]"
    },
    "postgresAdminUser": {
      "type": "string",
      "defaultValue": "[parameters('postgresAdminUser')]"
    },
    "postgresAdminPassword": {
      "type": "secureString",
      "metadata": { "description": "PostgreSQL admin password" }
    },
    "postgresSkuName": {
      "type": "string",
      "defaultValue": "[parameters('postgresSkuName')]"
    },
    "postgresSkuTier": {
      "type": "string",
      "defaultValue": "[parameters('postgresSkuTier')]"
    },
    "postgresSkuCapacity": {
      "type": "int",
      "defaultValue": "[parameters('postgresSkuCapacity')]"
    },
    "postgresStorageGB": {
      "type": "int",
      "defaultValue": "[parameters('postgresStorageGB')]",
      "minValue": 32,
      "maxValue": 4096
    },
    "postgresVersion": {
      "type": "string",
      "defaultValue": "[parameters('postgresVersion')]"
    },
    "publicIpSkuName": {
      "type": "string",
      "defaultValue": "[parameters('publicIpSkuName')]"
    },
    "publicIpAllocationMethod": {
      "type": "string",
      "defaultValue": "[parameters('publicIpAllocationMethod')]"
    }
  },
  "variables": {
    "frontendVmName": "omniverse-frontend-vm",
    "frontendNicName": "frontend-nic",
    "frontendPipName": "frontend-pip",
    "nsgName": "omniverse-nsg"
    ,"postgresStorageGBInt": "[int(parameters('postgresStorageGB'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2021-05-01",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": ["[parameters('vnetAddressPrefix')]"]
        },
        "subnets": [
          {
            "name": "[parameters('frontendSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('frontendSubnetPrefix')]"
            }
          },
          {
            "name": "[parameters('backendSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('backendSubnetPrefix')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2021-05-01",
      "name": "[variables('nsgName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "Allow-RDP",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "Allow-SSH",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1010,
              "direction": "Inbound"
            }
          },
          {
            "name": "Allow-HTTPS",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1020,
              "direction": "Inbound"
            }
          },
          {
            "name": "Allow-HTTP",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1030,
              "direction": "Inbound"
            }
          },
          {
            "name": "Allow-Omniverse-3009",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3009",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1040,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2021-05-01",
      "name": "[variables('frontendPipName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "[parameters('publicIpSkuName')]" },
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIpAllocationMethod')]"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2021-05-01",
      "name": "[variables('frontendNicName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('frontendPipName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('frontendSubnetName'))]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('frontendPipName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-11-01",
      "name": "[variables('frontendVmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('frontendNicName'))]"
      ],
      "properties": {
        "hardwareProfile": { "vmSize": "[parameters('frontendVmSize')]" },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2022-datacenter",
            "version": "latest"
          },
          "osDisk": { "createOption": "FromImage" }
        },
        "osProfile": {
          "computerName": "[substring(variables('frontendVmName'), 0, 15)]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('windowsAdminPassword')]",
          "windowsConfiguration": {
            "provisionVMAgent": true,
            "enableAutomaticUpdates": true
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('frontendNicName'))]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2022-01-20-preview",
      "name": "[parameters('postgresServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "version": "[parameters('postgresVersion')]",
        "administratorLogin": "[parameters('postgresAdminUser')]",
        "administratorLoginPassword": "[parameters('postgresAdminPassword')]",
        "storage": { "storageSizeGB": "[variables('postgresStorageGBInt')]" },
        "network": { "publicNetworkAccess": "Enabled" }
      },
      "sku": {
        "name": "[parameters('postgresSkuName')]",
        "tier": "[parameters('postgresSkuTier')]",
        "capacity": "[parameters('postgresSkuCapacity')]"
      }
    }
  ],
  "outputs": {
    "frontendPublicIp": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('frontendPipName'))).ipAddress]"
    },
    "frontendVmId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', variables('frontendVmName'))]"
    },
    "postgresHost": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName'))).fullyQualifiedDomainName]"
    },
    "postgresResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName'))]"
    }
  }
}
